@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Giriş Yap | Victoria Kuaför Salonu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="form-container">
            <h2 class="form-title">Giriş Yap</h2>
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }
            <form method="post" action="/Account/Login">
                <div class="form-group mb-3">
                    <input type="text" name="kullaniciAdi" class="form-control" placeholder="Kullanıcı Adı" required />
                </div>
                <div class="form-group mb-3">
                    <input type="password" name="sifre" class="form-control" placeholder="Şifre" required />
                </div>
                <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
            </form>
        </div>
    </div>
</body>
</html>
