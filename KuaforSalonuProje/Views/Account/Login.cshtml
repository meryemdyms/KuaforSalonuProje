@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Giriş Yap veya Kayıt Ol | Victoria Kuaför Salonu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-size: cover;
            height: 100vh;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            color: white;
        }

        .form-container {
            background-color: rgba(0, 0, 0, 0.6); /* Yarı saydam siyah zemin */
            padding: 30px;
            border-radius: 10px;
            width: 100%;
            max-width: 400px;
            text-align: center;
        }

        .form-title {
            font-size: 2rem;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-control {
            background-color: #f0f0f0;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .btn-primary {
            background-color: #6a5acd;
            border-color: #6a5acd;
            width: 100%;
            padding: 10px;
            font-size: 1.1rem;
        }

            .btn-primary:hover {
                background-color: #4e3b97;
            }

        .toggle-link {
            color: #6a5acd;
            cursor: pointer;
        }

            .toggle-link:hover {
                text-decoration: underline;
            }
    </style>
</head>

<body>
    <div class="form-container">
        <h2 class="form-title" id="form-title">Giriş Yap</h2>
        <form id="login-form" action="#" method="post">
            <div id="login-fields">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Kullanıcı Adı" required>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Şifre" required>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Giriş Yap</button>
                </div>
            </div>

            <div id="register-fields" style="display: none;">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Ad" required>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Soyad" required>
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="Kullanıcı adı" required>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Şifre" required>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Kayıt Ol</button>
                </div>
            </div>
        </form>
        <p>
            <span id="toggle-text">Kayıt olmak ister misiniz?</span>
            <span class="toggle-link" onclick="toggleForm()">Kayıt Ol</span>
        </p>
    </div>

    <script>
        function toggleForm() {
            const loginFields = document.getElementById('login-fields');
            const registerFields = document.getElementById('register-fields');
            const formTitle = document.getElementById('form-title');
            const toggleText = document.getElementById('toggle-text');
            const toggleLink = document.querySelector('.toggle-link');

            if (loginFields.style.display === 'none') {
                loginFields.style.display = 'block';
                registerFields.style.display = 'none';
                formTitle.textContent = 'Giriş Yap';
                toggleText.textContent = 'Kayıt olmak ister misiniz?';
                toggleLink.textContent = 'Kayıt Ol';
            } else {
                loginFields.style.display = 'none';
                registerFields.style.display = 'block';
                formTitle.textContent = 'Kayıt Ol';
                toggleText.textContent = 'Zaten hesabınız var mı?';
                toggleLink.textContent = 'Giriş Yap';
            }
        }

        // Giriş formu gönderildiğinde çalışacak fonksiyon
        document.getElementById("login-form").addEventListener("submit", function (event) {
            event.preventDefault(); // Sayfa yenilenmesini engeller

            const kullaniciAd = document.querySelector('input[placeholder="Kullanıcı Adı"]').value;
            const sifre = document.querySelector('input[placeholder="Şifre"]').value;

            const loginData = {
                KullaniciAd: kullaniciAd,
                Sifre: sifre
            };

            // Giriş verilerini backend API'sine gönderme
            fetch('/api/auth/login', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(loginData)
            })
                .then(response => response.json())
                .then(data => {
                    if (data.redirectUrl) {
                        window.location.href = data.redirectUrl; // Başarılı girişte yönlendirme
                    } else {
                        alert("Hata: " + data.message);
                    }
                })
                .catch(error => console.error("Error: ", error));
        });

        // Kayıt formu gönderildiğinde çalışacak fonksiyon
        document.getElementById("login-form").addEventListener("submit", function (event) {
            event.preventDefault(); // Sayfa yenilenmesini engeller

            // Eğer "Kayıt Ol" formu görüntüleniyorsa
            const registerFields = document.getElementById('register-fields');
            if (registerFields.style.display === 'block') {
                const adi = document.querySelector('input[placeholder="Ad"]').value;
                const soyadi = document.querySelector('input[placeholder="Soyad"]').value;
                const kullaniciAd = document.querySelector('input[placeholder="Kullanıcı adı"]').value;
                const sifre = document.querySelector('input[placeholder="Şifre"]').value;

                const registerData = {
                    Adi: adi,
                    Soyadi: soyadi,
                    KullaniciAd: kullaniciAd,
                    Sifre: sifre
                };

                // Kayıt verilerini backend API'sine gönderme
                fetch('/api/auth/register', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(registerData)
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            alert("Kayıt başarılı. Giriş yapabilirsiniz.");
                            window.location.href = "/login"; // Başarıyla yönlendir
                        } else {
                            alert("Hata: " + data.message); // Hata mesajı
                        }
                    })
                    .catch(error => console.error("Error: ", error));
            }
        });

    </script>
</body>
</html>
