@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Kullanıcı Paneli</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f9f6f1;
            font-family: 'Arial', sans-serif;
        }

        .header {
            background-color: #fff;
            border-bottom: 2px solid #ddd;
            padding: 20px 0;
        }

            .header h1 {
                color: #6c757d;
                font-weight: bold;
            }

        .btn-primary {
            background-color: #6c757d;
            border: none;
        }

            .btn-primary:hover {
                background-color: #5a6268;
            }

        .btn-success {
            background-color: #28a745;
        }

            .btn-success:hover {
                background-color: #218838;
            }

        .btn-info {
            background-color: #6c757d;
            color: #fff;
        }

            .btn-info:hover {
                background-color: #5a6268;
            }

        table {
            background-color: #fff;
            border-radius: 5px;
            overflow: hidden;
        }

            table th {
                background-color: #6c757d;
                color: #fff;
            }

            table td {
                color: #6c757d;
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="header text-center mb-4">
            <h1>Hoşgeldiniz, @ViewBag.UserName!</h1>
            <p>Güzellik salonumuza hoşgeldiniz. Kendinize uygun bir hizmet seçip randevu alabilirsiniz.</p>
            <a href="/Account/Logout" class="btn btn-primary mt-3">Çıkış Yap</a>
        </div>

        <div class="mt-5">
            <h2>Hizmetlerimiz</h2>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Hizmet Adı</th>
                        <th>Ücret</th>
                        <th>Süre</th>
                        <th>Hizmet Veren</th>
                        <th>Randevu Al</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var hizmet in ViewBag.Hizmetler)
                    {
                        <tr>
                            <td>@hizmet.HizmetId</td>
                            <td>@hizmet.HizmetAdi</td>
                            <td>@hizmet.Ucret TL</td>
                            <td>@hizmet.Sure</td>
                            <td>@hizmet.HizmetVeren</td>
                            <td>
                                <form action="/Randevu/Olustur" method="post" class="d-inline">
                                    <input type="hidden" name="HizmetId" value="@hizmet.HizmetId" />
                                    <button type="submit" class="btn btn-success">Randevu Al</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-5">
            <h2>Yapay Zeka Yardımı</h2>
            <p>Hizmetlerimizle ilgili tavsiye almak veya detaylı bilgi için yapay zekadan faydalanabilirsiniz.</p>
            <a href="/AI/Consult" class="btn btn-info">Yapay Zeka Yardımı Al</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
