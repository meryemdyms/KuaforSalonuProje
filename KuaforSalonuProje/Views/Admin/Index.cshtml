@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Paneli</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f9f6f1; /* Arka plan rengi */
        }

        .sidebar {
            height: 100vh;
            background-color: #ffffff; /* Beyaz arka plan */
            color: #333; /* Koyu gri yazı */
            padding-top: 20px;
            border-right: 2px solid #ddd; /* Sağ kenar çizgisi */
        }

            .sidebar a {
                color: #333; /* Koyu gri metin */
                padding: 10px 15px;
                text-decoration: none;
                display: block;
                border-radius: 5px;
            }

                .sidebar a:hover {
                    background-color: #ddd; /* Gri hover rengi */
                }

            .sidebar h4 {
                text-align: center;
                color: #333;
                font-size: 24px;
            }

        .container-fluid {
            margin-left: 10px; /* Sidebar'a biraz boşluk bırakıldı */
            padding-left: 0; /* Container'da ekstra sol boşluk bırakmamak için */
        }

        .card-header {
            background-color: #f0f0f0; /* Hafif gri başlık rengi */
            color: #333;
            font-weight: bold;
        }

        .card {
            border-radius: 10px;
            margin-bottom: 20px;
            background-color: #ffffff; /* Beyaz card arka planı */
            border: 1px solid #ddd; /* Hafif gri border */
        }

        .btn-primary {
            background-color: #f0f0f0; /* Hafif gri buton */
            border-color: #f0f0f0;
            border-radius: 30px;
            padding: 10px 20px;
        }

            .btn-primary:hover {
                background-color: #ddd; /* Hoverda gri ton değişimi */
                border-color: #ddd;
            }

        .table th, .table td {
            padding: 15px;
        }

        .form-label {
            font-weight: bold;
        }

    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar col-md-3">
            <h4 class="text-center">Admin Paneli</h4>
            <a href="#" onclick="goHome()">Ana Sayfa</a> <!-- Ana sayfaya yönlendirme -->
            <a href="#">Çalışan Yönetimi</a>
            <a href="#">Randevu Yönetimi</a>
        </div>

        <!-- Main Content -->
        <div class="container-fluid col-md-9">
            <h1 class="mt-3">Çalışan Yönetimi</h1>
            <p>Çalışanları ekleyebilir, silebilir ve düzenleyebilirsiniz.</p>

            <!-- Add New Employee Form -->
            <div class="card">
                <div class="card-header">
                    <h5>Yeni Çalışan Ekle</h5>
                </div>
                <div class="card-body">
                    <form id="employeeForm">
                        <div class="mb-3">
                            <label for="employeeName" class="form-label">Çalışan Adı</label>
                            <input type="text" class="form-control" id="employeeName" required>
                        </div>
                        <div class="mb-3">
                            <label for="employeeSurname" class="form-label">Çalışan Soyadı</label>
                            <input type="text" class="form-control" id="employeeSurname" required>
                        </div>
                        <div class="mb-3">
                            <label for="specialization" class="form-label">Uzmanlık Alanı</label>
                            <input type="text" class="form-control" id="specialization" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Ekle</button>
                    </form>
                </div>
            </div>


            <!-- Employee List -->
            <div class="card mt-4">
                <div class="card-header">
                    <h5>Çalışanlar</h5>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Adı</th>
                                <th scope="col">Uzmanlık Alanı</th>
                                <th scope="col">Uygunluk Saatleri</th>
                                <th scope="col">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody id="employeeList">
                            <!-- Employees will be listed here dynamically -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById("employeeForm").addEventListener("submit", function (e) {
            e.preventDefault();

            const employeeName = document.getElementById("employeeName").value;
            const employeeSurname = document.getElementById("employeeSurname").value;
            const specialization = document.getElementById("specialization").value;

            const employeeData = {
                CalisanAdi: employeeName,
                CalisanSoyadi: employeeSurname,
                UzmanlikAlani: specialization
            };

            console.log("Gönderilen veri:", employeeData); // Veriyi konsola yazdır

            fetch('/Calisan/AddCalisan', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(employeeData)
            })
                .then(response => response.json())
                .then(data => {
                    if (data.message) {
                        alert(data.message);
                        document.getElementById("employeeForm").reset();
                    } else if (data.errors) {
                        console.error("Hatalar:", data.errors); // Sunucudan dönen hata mesajlarını konsola yazdır
                    }
                })
                .catch(error => {
                    console.error('Hata:', error);
                    alert("Çalışan eklenirken bir hata oluştu.");
                });
        });

    </script>

</body>
</html>
